#include <iostream>
#include <math.h>
using namespace std;
int main()
{
	int s,a;
	float nilai;
	string c[100] = {"","mm","cm","dm","m","dam","hm","km"};
	cout<<"Pilih Satuan awal"<<endl;
	cout<<"1. mm"<<endl;
	cout<<"2. cm"<<endl;
	cout<<"3. dm"<<endl;
	cout<<"4. m"<<endl;
	cout<<"5. dam"<<endl;
	cout<<"6. hm"<<endl;
	cout<<"7. km"<<endl;
	cout<<"Pilih satuan: ";
	cin>>s;
	cout<<"Masukan nilai: ";cin>>nilai;
	cout<<"Pilih Konversi"<<endl;
	cout<<"1. mm"<<endl;
	cout<<"2. cm"<<endl;
	cout<<"3. dm"<<endl;
	cout<<"4. m"<<endl;
	cout<<"5. dam"<<endl;
	cout<<"6. hm"<<endl;
	cout<<"7. km"<<endl;
	cout<<"Pilih konversi: ";
	cin>>a;
	if(s<a){
		int temp = a-s;
		cout<<"Hasil: "<<nilai/pow(10,temp)<<" "<<c[s];
	}else if(s>a){
		int temp = s-a;
		cout<<"Hasil: "<<nilai*pow(10,temp)<<" "<<c[a];
	}else if(s==a){
		cout<<"Hasil: "<<nilai<<" "<<c[s];
	}
} 
